{
  "manifest_version": 3,
  "name": "SafeBrowse AI",
  "version": "1.0.0",
  "description": "Emotion-aware online safety guardian for children",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SafeBrowse AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
